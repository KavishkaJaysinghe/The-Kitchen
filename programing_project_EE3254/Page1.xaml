<Page x:Class="programing_project_EE3254.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:programing_project_EE3254" xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Images/vecteezy_wheat-plant-in-the-sunset_2054641.jpg"
                        Stretch="None"/>
        </Border.Background>

        <Border CornerRadius="1"                    
            BorderThickness="0.01"
            Opacity="0.95">

            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF050216" Offset="0"/>
                    <GradientStop Color="#FF3480DA" Offset="0.299"/>
                    <GradientStop Color="#FFD9EE00" Offset="1"/>
                    <GradientStop Color="#FFD9A147"/>
                    <GradientStop Color="#FF9B947D" Offset="0.63"/>
                </LinearGradientBrush>
            </Border.BorderBrush>

            <Border.Background>
                <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                    <GradientStop Color="#060531" Offset="0"/>
                    <GradientStop Color="#FF55611D" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Left">
                        <Button x:Name="btnLogin"                          
                             BorderThickness="0"
                             Foreground="White"
                             FontSize="12"
                             FontFamily="Montserrat"
                             Cursor="Hand"                           
                             Margin="0,50,0,0"
                                Opacity="0.9"
                             Click="btnBack_Click">

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#FF2D3031"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF4C5329"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Content>
                                <fa:IconImage Icon="ArrowAltCircleLeft" Foreground="#FF110E2E"/>
                            </Button.Content>

                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Width="40" Height="40"
                     CornerRadius="20"
                     Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                    <Grid Grid.Row="1" VerticalAlignment="Center">
                        <StackPanel Width="300"
                            Grid.Row="1"
                             Orientation="Vertical"
                                 Margin="0,35,0,0">


                            <TextBlock Text="NEW USER" FontSize="25" Foreground="White" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 -15 0 15"/>
                        <TextBlock Text="Username:" Margin="0 0 0 5" Foreground="White"/>
                        <TextBox x:Name="txtUsername"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"                            
                             Foreground="White"
                             CaretBrush="LightGray"
                             BorderBrush="DarkGray"
                             BorderThickness="0,0,0,2"
                             Height="28"
                             VerticalContentAlignment="Center"
                             Margin="0,5,0,0"
                             Padding="20,0,0,0">

                            <TextBox.Background>
                                <ImageBrush ImageSource="/Images/user-icon.png"
                    Stretch="None"
                    AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>
                        <TextBlock Text="Password:" Margin="0 0 0 5" Foreground="White"/>
                        <TextBox x:Name="txtPassword"
         FontSize="13"
         FontWeight="Medium"
         FontFamily="Montserrat"                            
         Foreground="White"
         CaretBrush="LightGray"
         BorderBrush="DarkGray"
         BorderThickness="0,0,0,2"
         Height="28"
         VerticalContentAlignment="Center"
         Margin="0,5,0,0"
         Padding="20,0,0,0">

                            <TextBox.Background>
                                <ImageBrush ImageSource="/Images/key-icon.png"
                    Stretch="None"
                    AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>
                        <Label Content="Admin KEY:" Foreground="White"/>
                        <PasswordBox x:Name="txtAdminpass"
                                FontSize="13"
                                FontWeight="Medium"
                                FontFamily="Montserrat"                            
                                Foreground="White"
                                CaretBrush="LightGray"
                                BorderBrush="DarkGray"
                                BorderThickness="0,0,0,2"
                                Height="28"
                                VerticalContentAlignment="Center"
                                Margin="0,5,0,0"
                                Padding="20,0,0,0">

                            <PasswordBox.Background>
                                <ImageBrush ImageSource="/Images/key-icon.png"
                               Stretch="None"
                               AlignmentX="Left"/>
                            </PasswordBox.Background>
                        </PasswordBox>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" />
                        <Button x:Name="save_btn" Content="Save" Grid.Row="1" VerticalAlignment="Top" Width="100" Height="40" Margin="0,15" Click="save_Click">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#4CAF50"/>
                                    <!-- Green Background Color -->
                                    <Setter Property="Foreground" Value="White"/>
                                    <!-- White Text Color -->
                                    <Setter Property="FontFamily" Value="Segoe UI"/>
                                    <!-- Font Family -->
                                    <Setter Property="FontSize" Value="16"/>
                                    <!-- Font Size -->
                                    <Setter Property="BorderThickness" Value="2"/>
                                    <!-- Border Thickness -->
                                    <Setter Property="BorderBrush" Value="#388E3C"/>
                                    <!-- Border Color -->
                                    <Setter Property="Padding" Value="8"/>
                                    <!-- Padding -->
                                    <Setter Property="Cursor" Value="Hand"/>

                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#43A047"/>
                                                        <!-- Darker Green on Mouse Over -->
                                                    </Trigger>
                                                    <Trigger Property="IsPressed" Value="True">
                                                        <Setter Property="Background" Value="#388E3C"/>
                                                        <!-- Dark Green on Pressed -->
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>

                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                    </Grid>

                </Grid>
                
            </Grid>

        </Border>

    </Border>



</Page>
